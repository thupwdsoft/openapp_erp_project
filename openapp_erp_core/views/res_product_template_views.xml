<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- FORM: ẩn Chi phí -->
  <record id="view_product_template_hide_cost" model="ir.ui.view">
    <field name="name">product.template.form.hide.cost</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">

      <!-- Ẩn trường đơn giá vốn -->
      <xpath expr="//field[@name='standard_price']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>

      <!-- Ẩn group chứa đơn giá vốn (nếu có) -->
      <xpath expr="//group[@name='group_standard_price']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>

      <!-- Ẩn nút BOM / Compute price / View BOM (tuỳ phiên bản & module) -->
      <!-- Smart button mở danh sách BoM -->
      <xpath expr="//button[@name='%(mrp.action_mrp_bom_form)d']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>

      <!-- Nút tính giá từ BoM -->
      <xpath expr="//button[@name='action_compute_price']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>

      <!-- Một số bản dùng action xem BoM trên form -->
      <xpath expr="//button[@name='action_view_bom']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>

      <!-- Phòng trường hợp tên khác nhưng có 'bom' trong name -->
      <xpath expr="//button[contains(@name, 'bom')]" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>

    </field>
  </record>

  <!-- TREE product.template: ẩn cột Chi phí -->
  <record id="product_template_tree_hide_cost" model="ir.ui.view">
    <field name="name">product.template.tree.hide.cost</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='standard_price']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>
    </field>
  </record>

  <!-- (tuỳ chọn) TREE product.product: ẩn cột Chi phí -->
  <record id="product_product_tree_hide_cost" model="ir.ui.view">
    <field name="name">product.product.tree.hide.cost</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_product_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='standard_price']" position="attributes">
        <attribute name="groups">openapp_hide_product_cost.group_show_product_cost</attribute>
      </xpath>
    </field>
  </record>

</odoo>
