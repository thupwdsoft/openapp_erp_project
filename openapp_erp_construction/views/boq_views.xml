<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- LIST -->
  <record id="view_openapp_boq_list" model="ir.ui.view">
    <field name="name">openapp.boq.list</field>
    <field name="model">openapp.boq</field>
    <field name="arch" type="xml">
      <list string="Khối lượng dự toán (BoQ)" default_order="id desc">
        <field name="name"/>
        <field name="project_id"/>
        <field name="partner_id"/>
        <field name="state" widget="badge"/>
        <field name="amount_total"/>
      </list>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_openapp_boq_form" model="ir.ui.view">
    <field name="name">openapp.boq.form</field>
    <field name="model">openapp.boq</field>
    <field name="arch" type="xml">
      <form string="Khối lượng dự toán (BoQ)">
        <header>
          <!-- SO buttons -->
          <button name="action_create_sale_order" type="object" string="Tạo báo giá"
                  class="oe_highlight" invisible="sale_order_id"/>
          <button name="action_open_sale_order" type="object" string="Mở báo giá"
                  invisible="not sale_order_id"/>
          <button name="action_print_quotation" type="object" string="In báo giá"
                  invisible="not sale_order_id"/>

          <!-- State buttons -->
          <button name="action_confirm" type="object" string="Xác nhận"
                  class="oe_highlight" invisible="state != 'draft'"/>
          <button name="action_reset_to_draft" type="object" string="Về nháp"
                  invisible="state != 'confirmed'"/>

          <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
        </header>

        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="project_id"/>
            <field name="partner_id"/>
            <field name="pricelist_id"/>
            <field name="sale_order_id" readonly="1"/>
            <field name="amount_total" readonly="1"/>
          </group>

          <notebook>
            <page string="Dòng BoQ">
              <field name="line_ids" context="{'default_quantity': 1.0}">
                <list editable="bottom">
                  <field name="sequence" string="STT" width="70"/>
                  <field name="group_name" string="Nhóm"/>
                  <field name="line_type" string="Loại"/>
                  <field name="name" string="Diễn giải"/>
                  <field name="product_id" string="Vật tư/Công việc"/>
                  <field name="uom_id" string="ĐVT" domain="[('category_id','=',product_uom_category_id)]"/>
                  <field name="calc_method" string="Cách tính"/>
                  <!-- nhập duy nhất -->
                  <field name="measure_value" string="Số đo"/>
                  <field name="measure_label" string="ĐVT đo" readonly="1"/>
                  <!-- giá & tổng -->
                  <field name="price_unit" string="Đơn giá"/>
                  <field name="total_price" string="Thành tiền" readonly="1"/>
                  <field name="include_in_print" string="In?"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_openapp_boq" model="ir.actions.act_window">
    <field name="name">Khối lượng dự toán (BoQ)</field>
    <field name="res_model">openapp.boq</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
