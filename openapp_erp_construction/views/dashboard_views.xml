<odoo>
  <record id="view_openapp_construction_dashboard_form" model="ir.ui.view">
    <field name="name">openapp.construction.dashboard.form</field>
    <field name="model">openapp.construction.dashboard</field>
    <field name="arch" type="xml">
      <form string="Construction Dashboard">
        <sheet>
          <group>
            <group>
              <field name="kpi_projects" readonly="1"/>
              <field name="kpi_open_mr" readonly="1"/>
            </group>
            <group>
              <field name="kpi_rfi_open" readonly="1"/>
              <field name="kpi_ncr_open" readonly="1"/>
              <field name="kpi_wc_invoiced" readonly="1"/>
            </group>
          </group>
          <separator string="Lối tắt"/>
          <group>
            <button string="BoQ" type="action" name="%(openapp_erp_construction.action_openapp_boq)d" class="oe_link"/>
            <button string="Material Requests" type="action" name="%(openapp_erp_construction.action_openapp_mr)d" class="oe_link"/>
            <button string="Subcontracts" type="action" name="%(openapp_erp_construction.action_openapp_subcontract)d" class="oe_link"/>
            <button string="Work Certificates" type="action" name="%(openapp_erp_construction.action_openapp_wc)d" class="oe_link"/>
            <button string="Variation Orders" type="action" name="%(openapp_erp_construction.action_openapp_vo)d" class="oe_link"/>
            <button string="Material Consumption" type="action" name="%(openapp_erp_construction.action_openapp_material_consumption)d" class="oe_link"/>
            <button string="Job Costing" type="action" name="%(openapp_erp_construction.action_openapp_job_costing)d" class="oe_link"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_openapp_construction_dashboard" model="ir.actions.act_window">
    <field name="name">Báo cáo</field>
    <field name="res_model">openapp.construction.dashboard</field>
    <field name="view_mode">form</field>
    <field name="target">current</field>
  </record>
</odoo>