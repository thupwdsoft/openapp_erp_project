<odoo>
  <record id="res_config_settings_view_form_inherit_openapp_retention" model="ir.ui.view">
    <field name="name">res.config.settings.openapp.retention</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" string="OpenApp Construction">
          <h2>OpenApp cho Công trình</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="openapp_retention_account_id"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="openapp_retention_account_id"/>
                <div class="text-muted">Tài khoản kế toán dùng để hạch toán dòng Retention.</div>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="openapp_retention_journal_id"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="openapp_retention_journal_id"/>
                <div class="text-muted">Tùy chọn journal dùng cho bút toán Retention (nếu áp dụng).</div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>