<odoo>
  <!-- LIST -->
  <record id="view_openapp_mr_list" model="ir.ui.view">
    <field name="name">openapp.mr.list</field>
    <field name="model">openapp.material.request</field>
    <field name="arch" type="xml">
      <list string="Yêu cầu vật tư (MR)" default_order="date desc"
            decoration-success="state == 'done'"
            decoration-warning="state == 'approved'">
        <field name="name"/>
        <field name="project_id"/>
        <field name="date"/>
        <field name="qty_requested"/>
        <field name="qty_delivered"/>
        <field name="delivery_progress" widget="progressbar"/>
        <field name="state" widget="badge"/>
      </list>
    </field>
  </record>

  <record id="view_openapp_mr_form" model="ir.ui.view">
    <field name="name">openapp.mr.form</field>
    <field name="model">openapp.material.request</field>
    <field name="arch" type="xml">
      <form string="Yêu cầu vật tư (MR)">
        <header>
          <button name="action_submit"  type="object" string="Gửi duyệt" class="btn-primary" invisible="state != 'draft'"/>
          <button name="action_approve" type="object" string="Phê duyệt" invisible="state != 'submitted'"/>
          <button name="action_create_internal_transfer" type="object" string="Tạo phiếu xuất (MR)" class="btn-secondary" invisible="state != 'approved'"/>
          <button name="action_done" type="object" string="Hoàn tất" invisible="state != 'approved'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,done"/>
        </header>

        <sheet>
          <div class="oe_button_box" name="button_box">
            <button class="oe_stat_button" name="action_view_pickings" type="object" icon="fa-truck"
                    invisible="picking_count == 0">
              <field name="picking_count" widget="statinfo" string="Phiếu kho"/>
            </button>
          </div>

          <group>
            <field name="name" readonly="1"/>
            <field name="project_id" options="{'no_create_edit': True}"/>
            <field name="analytic_account_id" invisible="1"/>
            <field name="date"/>
          </group>

          <group>
            <field name="qty_requested" readonly="1"/>
            <field name="qty_delivered" readonly="1"/>
            <field name="delivery_progress" widget="progressbar" readonly="1"/>
          </group>

          <notebook>
            <page string="Dòng MR">
              <!-- CHƯA HOÀN TẤT: cho thêm/sửa/xóa -->
              <field name="line_ids" invisible="state == 'done'">
                <list editable="bottom" create="1" edit="1" delete="1">
                  <field name="product_id"/>
                  <field name="uom_id"/>
                  <field name="quantity"/>
                  <field name="qty_delivered" readonly="1"/>
                  <field name="description"/>
                </list>
              </field>

              <!-- ĐÃ HOÀN TẤT: chỉ đọc, không có thùng rác -->
              <field name="line_ids" invisible="state != 'done'" readonly="1">
                <list create="0" edit="0" delete="0">
                  <field name="product_id"/>
                  <field name="uom_id"/>
                  <field name="quantity"/>
                  <field name="qty_delivered" readonly="1"/>
                  <field name="description"/>
                </list>
              </field>

            </page>

            <page string="Phiếu kho" invisible="not picking_ids">
              <field name="picking_ids" readonly="1">
                <list>
                  <field name="name"/>
                  <field name="picking_type_id"/>
                  <field name="state"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


  <record id="action_openapp_mr" model="ir.actions.act_window">
    <field name="name">Yêu cầu vật tư (MR)</field>
    <field name="res_model">openapp.material.request</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'search_default_group_by':'project_id'}</field>
  </record>
</odoo>
